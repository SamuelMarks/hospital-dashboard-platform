{
  "name": "pulse-query-ng-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write .",
    "docs": "compodoc -p tsconfig.doc.json -d docs",
    "docs:coverage": "compodoc -p tsconfig.doc.json --coverageTest 100 --coverageMinimumPerFile 100 --coverageTestShowOnlyFailed",
    "serve:ssr:pulse-query-ng-web": "node dist/pulse-query-ng-web/server/server.mjs",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.7.0",
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/platform-server": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@angular/ssr": "^21.1.3",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@material/material-color-utilities": "^0.4.0",
    "codemirror": "^6.0.2",
    "express": "^5.1.0",
    "prettier": "^3.8.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@angular/platform-browser-dynamic": "^21.1.3",
    "@axe-core/playwright": "^4.11.0",
    "@compodoc/compodoc": "^1.2.1",
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
